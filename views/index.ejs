<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Searchable Dropdown CSS & JS-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />


    <title>TD 2021 Application</title>
  </head>
  <body>
    <div class="container p-3 my-3 bg-dark text-white">
        <h1 class="text-center">TAMU Datathon 2021 Application</h1>
    </div>
    <form>
    <div class="container p-3 my-3 bg-secondary text-white">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" id="email" placeholder="Email Address" required="true">
        </div>
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" placeholder="First Name" required="true">
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" placeholder="Last Name"required="true">
        </div>
    </div>
    <div class="container p-3 my-3 bg-dark text-white">
        <div class="form-group">
            <label for="gitHub">GitHub</label>
            <input type="url" class="form-control" id="gitHub" placeholder="Link to GitHub Profile">
        </div>
        <div class="form-group">
            <label for="linkedIn">LinkedIn</label>
            <input type="url" class="form-control" id="linkedIn" placeholder="Link to LinkedIn Profile">
        </div>
        <div class="form-group">
            <label for="kaggle">Kaggle</label>
            <input type="url" class="form-control" id="kaggle" placeholder="Link to Kaggle Profile">
        </div>
        <div class="form-group">
            <label for="devpost">Devpost</label>
            <input type="url" class="form-control" id="devpost" placeholder="Link to Devpost Profile">
        </div>
        <div class="form-group">
            <label for="website">Website</label>
            <input type="url" class="form-control" id="website" placeholder="Link to Personal Website">
        </div>
    </div>
    <div class="container p-3 my-3 bg-secondary text-white">
        <label for="resume">Resume</label>
        <input type="file" class="form-control" name="resume" accept="application/pdf">
    </div>
    <div class="container p-3 my-3 bg-dark text-white">
        <div class="form-group">
            <label for="school">School</label>
            <input type="text" class="form-control" id="school" placeholder="School" required="true">
        </div>
        <div class="form-group">
            <label for="classification">Classification</label>
            <input type="text" class="form-control" id="classification" placeholder="Classification" required="true">
        </div>
        <div class="form-group">
            <label for="graduation">Graduation Date</label>
            <input type="text" class="form-control" id="graduation" placeholder="Graduation Date" required="true">
        </div>
        <div class="form-group">
            <label for="majors">Majors</label>
            <select class="form-control" id="major-select" required="true" multiple="multiple" style="color:#000000;">
            <% for (const major of majors.results) { %>
                <option value="<%= major.id %>"><%= major.text %></option>
            <% } %>    
            </select>
        </div>
        <div class="form-group">
            <label for="minors">Minors</label>
            <select class="form-control" id="minor-select" required="true" multiple="multiple">
            <% for (const major of majors.results) { %>
                <option value="<%= major.id %>"><%= major.text %></option>
            <% } %>   
            </select>
        </div>
        <div class="form-group">
            <label for="firstGen">First Generation Student</label>
            <input type="text" class="form-control" id="firstGen" placeholder="First Generation Student" required="true">
        </div>
    </div>
    <div class="container p-3 my-3 bg-secondary text-white">
        <div class="form-group">
            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" placeholder="Gender" required="true">
        </div>
        <div class="form-group">
            <label for="race">Race</label>
            <input type="text" class="form-control" id="race" placeholder="Race" required="true">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" placeholder="Age" required="true">
        </div>
    </div>
    <div class="container p-3 my-3 bg-dark text-white">
        <div class="form-group">
            <label for="numHack">Number of Hackathons Attended</label>
            <input type="number" class="form-control" id="numHack" placeholder="Number of Hackathons Attended" required="true">
        </div>
        <div class="form-group">
            <label for="dsExp">DS/ML Experience</label>
            <input type="text" class="form-control" id="dsExp" placeholder="DS/ML Experience" required="true">
        </div>
        <div class="form-group">
            <label for="techExp">Tech Experience</label>
            <input type="text" class="form-control" id="techExp" placeholder="Tech Experience" required="true">
        </div>
    </div>
    <div class="container p-3 my-3 bg-secondary text-white">
        <button type="submit" class="btn">Submit Application</button>
    </div>
    </form>
    <!-- Optional JavaScript -->
    
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#major-select').select2({
                placeholder: 'Majors',
                theme: "classic"
            });
            $('#minor-select').select2({
                placeholder: 'Minors',
                theme: "classic"
            });
        });
    </script>

  </body>
</html>

<style>
    .select2-selection__choice__display{
    color: #000000!important;
}
</style>
